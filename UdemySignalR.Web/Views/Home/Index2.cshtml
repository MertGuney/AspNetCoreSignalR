@section Scripts{
<script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
<script type="text/javascript">

    var connection = new signalR.HubConnectionBuilder().configureLogging(signalR.LogLevel.Information).withAutomaticReconnect([1000,2000,3000,4000]).withUrl("/MyHub").build();
    connection.start().then(()=>{
        console.log(connection.connectionState);

        connection.invoke("SendMessage","ilk mesaj");
    }).catch((err)=>{console.log(err)})
    connection.on("ReceiveMessage",(message)=>{console.log(message)})

</script>
}
